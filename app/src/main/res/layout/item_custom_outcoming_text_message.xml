<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/bubble_root_vertical_margin"
    android:layout_marginLeft="@dimen/bubble_root_horizontal_margin"
    android:layout_marginRight="@dimen/bubble_root_horizontal_margin"
    android:layout_marginTop="@dimen/bubble_root_vertical_margin">

    <LinearLayout
        android:id="@id/bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/bubble_margin_start"
        android:minWidth="@dimen/min_bubble_chat"
        android:orientation="vertical">

        <TextView
            android:id="@id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@id/messageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/bubble"
        android:layout_alignStart="@id/bubble"
        android:layout_below="@id/bubble"
        android:layout_marginStart="@dimen/bubble_root_horizontal_margin" />

</RelativeLayout>